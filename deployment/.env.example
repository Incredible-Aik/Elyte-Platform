# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production_2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

