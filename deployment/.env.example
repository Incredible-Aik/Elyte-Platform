# =============================================================================
# ELYTE PLATFORM ENVIRONMENT CONFIGURATION
# Ghana's Premier Ride-Sharing Platform
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001
USSD_PORT=3002
WEB_PORT=3000

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
USSD_URL=http://localhost:3002

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=elyte_platform
DB_USER=elyte_user
DB_PASSWORD=your_secure_database_password_2024

# Database SSL (set to true for production)
DB_SSL=false

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# REDIS CONFIGURATION (Optional but recommended)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_2024
