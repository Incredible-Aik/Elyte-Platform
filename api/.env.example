# Environment Configuration for Elyte Platform API

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/elyte-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# Client Configuration
CLIENT_URL=http://localhost:3000

# SMS Service Configuration
SMS_PROVIDER=mock
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=Elyte

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Africa's Talking Configuration (if using Africa's Talking)
AFRICAS_TALKING_USERNAME=your-username
AFRICAS_TALKING_API_KEY=your-api-key

# Payment Configuration
PAYMENT_PROVIDER=mock

# Mobile Money Configuration (Ghana)
MTN_MOMO_COLLECTION_API_KEY=your-mtn-api-key
MTN_MOMO_COLLECTION_USER_ID=your-mtn-user-id
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key

VODAFONE_MOMO_API_KEY=your-vodafone-api-key
AIRTEL_TIGO_API_KEY=your-airtel-tigo-api-key

# Map/Location Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# File Storage
FILE_UPLOAD_PATH=uploads
FILE_MAX_SIZE=5000000

# Email Configuration
EMAIL_PROVIDER=mock
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# USSD Configuration
USSD_SERVICE_CODE=*920*8*1#
USSD_SHORTCODE=920