{
  "name": "elyte-platform-api",
  "version": "1.0.0",
  "description": "Backend API for Elyte Platform - Ghana's Premier Ride-Sharing Service",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docs": "jsdoc -c jsdoc.conf.json",
    "seed": "node scripts/seedDatabase.js",
    "migrate": "node scripts/migrate.js",
    "build": "echo 'API build completed'",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "ride-sharing",
    "ghana",
    "api",
    "mobile-money",
    "ussd",
    "express",
    "nodejs",
    "transportation",
    "mtn",
    "vodafone",
    "airtel-tigo"
  ],
  "author": "Elyte Platform Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Incredible-Aik/Elyte-Platform.git"
  },
  "bugs": {
    "url": "https://github.com/Incredible-Aik/Elyte-Platform/issues"
  },
  "homepage": "https://github.com/Incredible-Aik/Elyte-Platform#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0",
    "socket.io": "^4.7.4",
    "axios": "^1.6.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "redis": "^4.6.10",
    "bull": "^4.12.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "jsdoc": "^4.0.2",
    "@types/jest": "^29.5.8",
    "faker": "^5.5.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "tests/",
      "coverage/",
      "docs/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}